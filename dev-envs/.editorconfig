root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.bash]
indent_size = 4

[*.py]
indent_size = 4

[*.{yaml,yml}]
indent_size = 4

[*.{js,json}]
indent_size = 2

[*.{md,rst,in}]
indent_style = ignore
indent_size = ignore

[*.md]
trim_trailing_whitespace = false
